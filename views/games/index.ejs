<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/games/index.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  
  <section class="card-container">
    <% games.forEach(game => { %>
      <div class="card-base card" id="games-layout">
        <a href="/games/<%= game._id %>">
          <%  if ( game.coverImage.includes(".jpg") || game.coverImage.includes(".png")){ %>
            <img class="game-bg"
              src="<%= game.coverImage %>" 
              alt="game-background"
            >       
            <% } else { %>
              <img class="game-bg-noImg"
              src="/images/logo/FoxIcon.png"
              alt="game-background"
            <% } %> 
          >    
        </a>
        <a class="btn-link" href="/games/<%= game._id %>">
          <button class="btn-base">
            <%= game.name %> 
          </button>
          <div class="content">
            Genre: <%= game.genre %>
            <br>
            <br>
            Release Year: <%= game.releaseYear %> 
          </div>
        </a>
      </div>
        <% }) %>
  </section>

</main>




<%- include('../partials/footer') %>
