<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/games/new.css">
<%- include('../partials/nav') %>

<main class="content-push">
  <h1>Add Game</h1>
  <section>
    <% if (user) { %>
      <form action="/games" method="POST">
        <label>Name:
          <input type="text" name="name" placeholder="Game Title" autocomplete="off">
        </label><br><br>
        <label>Genre:
          <input type="text" name="genre" placeholder="ex. Action, Sports, etc." autocomplete="off">
        </label><br><br>
        <label>ESRB Rating:
          <select id="esrbSelect" name="esrbRating">
            <option value="E" selected="selected">E</option>
            <option value="E10">E10</option>
            <option value="T">T</option>
            <option value="M">M</option>
            <option value="AO">AO</option>
            <option value="RP">RP</option>
          </select>
        </label><br><br>
        <label>Release Year:
          <input type="text" name="releaseYear" placeholder="1958 to 2022" autocomplete="off">
        </label><br><br>
        <label>Cover Image (.jpg/.png):
          <input type="text" name="coverImage" placeholder="ex. https://ign.com/game.jpg" autocomplete="off">
        </label><br><br>
        <button type="submit" id="add-game">Add Game</button>
      </form>
    <% } %>
  </section>
</main>

<%- include('../partials/footer') %>